<h1>Report</h1>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @report.user.name, @report.user %>
</p>

<p>
  <strong>Created date:</strong>
  <%= @report.created_at.to_date %>
</p>

<% if current_user == @report.user %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
<% end %>
<%= link_to 'Back', reports_path %>
